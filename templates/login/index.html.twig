{% extends 'base.html.twig' %}

{% block bread %}
	> Login
{% endblock %}

{% block body %}
	<form action="{{ path('app_login') }}" method="POST">
		<div class="mt-10">
			<label class='block text-sm text-slate-600 dark:text-white font-medium'>Email</label>
			<input type="text" name="_username" value="{{ lastUsername }}" class="'block w-1/2 shadow-sm border-slate-400 dark:border-transparent dark:text-slate-600 rounded-md border p-1 mt-1 mb-2'"/>
		</div>

		<div class="mt-3">
			<label class='block text-sm text-slate-600 dark:text-white font-medium'>Password</label>
			<input type="password" name="_password" class="'block w-1/2 shadow-sm border-slate-400 dark:border-transparent dark:text-slate-600 rounded-md border p-1 mt-1 mb-2'"/>
		</div>

		<input type="hidden" name="_target_path" value="/micro-post"/>
		<button type="submit" class="bg-sky-600 text-white font-bold py-1 px-3 rounded mt-5 dark:bg-sky-600 hover:bg-sky-700 dark:hover:bg-sky-500 rounded-md">Login</button>

	</form>

{% endblock %}
