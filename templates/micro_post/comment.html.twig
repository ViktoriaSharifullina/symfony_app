{% extends 'base.html.twig' %}

{% block title %}Post - Add Comment
{% endblock %}

{% block bread %}
	>
	<a href="{{ path('app_micro_post_show', {post: post.id}) }}">Post</a>
	> Comment
{% endblock %}

{% block body %}
	{{ include('micro_post/_post.html.twig', {post: post})}}

	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
	<div>{{ form_errors(form) }}</div>

	<div class="mt-7">{{ form_label(form.text, 'Comment', {'label_attr': {'class': 'block text-sm text-slate-600 dark:text-white font-medium'}}) }}</div>
	<div class="mb-3">{{ form_widget(form.text, {'attr': {'class': 'block w-2/3 shadow-sm border-slate-400 dark:border-transparent dark:text-slate-600 rounded-md border p-1 mt-1 mb-2'}}) }}</div>
	{{ form_errors(form.text) }}

	<div>
		<button class="bg-sky-600 text-white py-1 px-3 rounded mt-2 dark:bg-sky-600 hover:bg-sky-700 dark:hover:bg-sky-500 rounded-md" type='submit'>Add comment</button>
	</div>
	{{ form_end(form) }}
{% endblock %}
