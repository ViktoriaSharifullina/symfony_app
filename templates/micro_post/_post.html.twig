<div class="mb-3">
	<div class="text-lg text-slate-500 dark:text-slate-400">
		<a href="#">user@email.com</a>
	</div>
	<div class="text-2xl">
		<a href="{{ path('app_micro_post_show', {post: post.id}) }}">
			{{post.title}}
		</a>
	</div>
	<div class="text-xl dark:text-slate-200">
		{{ post.text }}
	</div>
	<div class="text-sm text-slate-400 dark:text-slate-500">
		{{ post.created | date('M j, Y')}}
	</div>

	<div>
		<a href="#">
			Like
			<span class="px-2 rounded-md bg-slate-200 dark:bg-gray-700">0</span>
		</a>
	</div>
	<div>
		<a href="#">
			Comment
			<span class="px-2 rounded-md bg-slate-200 dark:bg-gray-700">{{post.comments.count}}</span>
		</a>
	</div>
</div>
